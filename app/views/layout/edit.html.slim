script src="/codemirror/lib/codemirror.js"
link rel="stylesheet" href="/codemirror/lib/codemirror.css"
link rel="stylesheet" href="/codemirror/theme/twilight.css"
script src="/codemirror/mode/css/css.js"
script src="/codemirror/mode/xml/xml.js"
script src="/codemirror/mode/javascript/javascript.js"
script src="/codemirror/mode/css/css.js"
script src="/codemirror/mode/htmlmixed/htmlmixed.js"
javascript:
  CodeMirror.fromTextArea(document.getElementById('site_layout'), {
    theme: 'twilight',
    mode: 'htmlmixed',
    tabSize: 2,
    indentWithTabs: false,
    lineNumbers: true
  });
  CodeMirror.fromTextArea(document.getElementById('site_layout_css'), {
    theme: 'twilight',
    mode: 'css',
    lineNumbers: true
  });

= link_to 'Show', @site
